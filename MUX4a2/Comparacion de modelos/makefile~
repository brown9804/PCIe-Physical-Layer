all: clean  autosyn sed ejecutable tabla
	echo Simulando valores...
	gtkwave muxy.vcd
	echo listo!

ejecutable:
	echo generando ejecutable...
	iverilog bancoPruebas.v -o exe.o
	echo listo!
tabla:
	echo Creando tabla de datas...
	vvp exe.o
	echo listo!
clean:
	rm -f *.o
	rm -f *.vcd
	rm -f mux2x1_2_estruct.v
	rm -f mux2x1_2_estruct_syn.v
	rm -f mux2x1_2_estructural_valid.v
run:
	echo Simulando valores...
	gtkwave muxy.vcd
	echo listo!
sed:
	sed -e 's/mux4x2_behav/mux4x2_struct/' ./mux4x2_struct_syn.v >> mux2x1_2_estructural_valid.v
	sed -i '2i `include "cmos_cells.v" ' mux2x1_2_estructural_valid.v
	rm -f mux2x1_2_estructural_syn.v
autosyn: 
	yosys ./Autosyn.ys
